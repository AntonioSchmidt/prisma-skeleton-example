datasource db {
  provider = "postgres"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
    id          Int @id @default(autoincrement())
    text        String
    email       String @unique
    streamId    String
    createdAt   DateTime @default(now())
    archived    Boolean @default(false)
}
